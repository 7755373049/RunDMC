<Post xmlns       ="http://developer.marklogic.com/site/internal"
      xmlns:form  ="http://developer.marklogic.com/site/internal/form"
      xmlns:label ="http://developer.marklogic.com/site/internal/form/attribute-labels"
      xmlns:values="http://developer.marklogic.com/site/internal/form/values"
      status=""
      label:status="Status"
      values:status="Draft Published">
  <form:fieldset legend="Edit">
    <title form:label="Title"
           form:wide="yes"/>
    <author form:repeating="yes"
            form:label="Author"/>
    <created/>
    <last-updated/>
    <tags>
      <tag form:label="Tag"
           form:repeating="yes"/>
    </tags>
    <body form:label="Body"
          form:type="textarea"/>
  </form:fieldset>
</Post>
